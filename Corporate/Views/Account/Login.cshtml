@using FallenMoon.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="login-page bg-blue">
    <div class="container">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="row">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Login Error!</strong> @ViewBag.ErrorMessage
                </div>
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-6 login-well bg-light">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <h2>Sign In</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserEmail)
                        @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control form-control-lg", placeholder = "e.g. john.doe@example.com" })
                        @Html.ValidationMessageFor(model => model.UserEmail)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-lg", placeholder = "********" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <span class="button-checkbox">
                        <button type="button" class="btn" data-color="info">Remember Me</button>
                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "hidden", id = "remember_me" })
                        <a href="" class="btn btn-link pull-right">Forgot Password?</a>
                    </span>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" class="btn btn-lg btn-primary bg-blue btn-block" value="Sign In">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a href="/Account/Register" class="btn btn-lg btn-primary btn-block">Register</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>